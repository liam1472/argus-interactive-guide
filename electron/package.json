{
  "name": "vts-guide-electron",
  "version": "1.0.2",
  "description": "VTS Guide - Offline Interactive Documentation for Argus VTS",
  "main": "main.js",
  "homepage": "https://github.com/Fliight-Engineering/argus-interactive-guide",
  "author": {
    "name": "Fliight Engineering",
    "email": "support@fliight.com.au"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win-x64": "electron-builder --win --x64",
    "build:win-arm64": "electron-builder --win --arm64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.fliight.vtsguide",
    "productName": "VTS Guide",
    "directories": {
      "output": "../artifacts/dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "Fliight-Engineering",
      "repo": "argus-interactive-guide"
    },
    "files": [
      "main.js",
      {
        "from": "../build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "../build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.reference",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "../static/img/vts-guide/image29.png"
    },
    "win": {
      "target": [
        "dir",
        "nsis",
        "portable"
      ],
      "icon": "../static/img/vts-guide/image29.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "../static/img/vts-guide/image29.png",
      "category": "Documentation",
      "maintainer": "Fliight Engineering <support@fliight.com.au>"
    }
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  }
}
